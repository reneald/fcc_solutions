    title JavaScript Calculator - Reneald
  body
    #calculator
      p#title Calc u later
      input#answer(type="text" disabled)
      .row
        each val in ["AC", "CE", "%", "/"]
          button= val
      .row
        each val in [7, 8, 9, "X"]
          button= val
      .row
        each val in [4, 5, 6, "-"]
          button= val
      .row
        each val in [1, 2, 3]
          button= val
        button.tall +
      .row
        each val in [0, ".", "="]
          button= val
